<!-- rails indicator to include board js -->
<%= javascript_include_tag "board" %>
<!-- end rails indicator -->
<!-- full page wrapper -->
<div id="wrapper" class="toggled">
    <!-- sidebar -->
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li>
                <a href="#" style="color:yellow" id="change-pad">CHANGE PAD</a>
            </li>
            <li>
                <a href="#" style="color:red">LOAD BOARD</a>
            </li>
            <li>
                <a href="#" style="color:orange">SAVE BOARD</a>
            </li>
            <li>
                <a href="#" style="color:green">ADD SAMPLE</a>
            </li>
            <li>
                <a href="#" style="color:purple">INSTRUCTIONS</a>
            </li>
            <li>
                <a href="#" style="color:white">ABOUT</a>
            </li>
        </ul>
    </div>
    <!-- end sidebar -->
    <!-- main page -->
    <div id="page-content-wrapper">
        <!-- toggle button -->
        <button class="btn btn-default" id="menu-toggle"><span id="menu-arrow" class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></button>
        <!-- end toggle button -->

        <!-- board -->
        <% @board.samples.each_with_index do |sample, index| %>
            <div id="pad-<%= index %>" data-url="<%= sample.url %>" class="button col-md-4 pad"><%= @board.letters[index] %></div>
        <% end %>
        <!-- end board -->

        <!-- modal select pad message -->
        <div class="select-a-pad modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="select-a-pad modal-content">
                    <div class="select-a-pad modal-header">
                        <p>CLICK A PAD TO CHANGE ITS SAMPLE</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- modal -->
        <div id="sampleModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">CHOOSE A SAMPLE</h4>
                    </div>
                    <div class="modal-body">
                        <ul class="modal-ul">
                        </ul>
                        <!-- append options here -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" data-dismiss="modal" id="confirm-sample">CONFIRM</button>
                    </div>
                </div>

            </div>
        </div>
        <!-- end modal -->

    </div>
    <!-- end main page -->
</div>
<!-- end full page wrapper -->
